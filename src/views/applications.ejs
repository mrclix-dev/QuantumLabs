<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Applications</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
    }
    .card-title {
      font-weight: bold;
    }
    .status-badge {
      font-size: 0.9rem;
    }
    .no-applications {
      text-align: center;
      font-size: 1.2rem;
      color: #6c757d;
    }
  </style>
</head>
<body>
  <div class="container my-5">
    <h1 class="text-center mb-4">Applications</h1>

    <div class="row">
      <% if (applications && applications.length > 0) { %>
        <% applications.forEach((application, index) => { %>
          <div class="col-md-6 col-lg-4 mb-4">
            <div class="card shadow-sm">
              <div class="card-body">
                <h5 class="card-title"><%= application.name %></h5>
                <p class="card-text">
                  <%= application.description %>
                </p>
                <% if (application.status === 'open') { %>
                  <span class="badge bg-success status-badge">Open</span>
                <% } else { %>
                  <span class="badge bg-danger status-badge">Closed</span>
                <% } %>
                <a href="/applications/<%= application._id %>/apply" class="btn btn-primary btn-sm mt-3">View Details</a>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="no-applications">
          <p>No applications available at the moment.</p>
        </div>
      <% } %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
